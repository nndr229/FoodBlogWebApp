    <div class="ui huge header">Edit your comment</div>
    <form class = "ui form" action="/blogs/<%= blog_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Comment</label>
            <textarea name="comment[text]" required ><%= comment.text%> </textarea>    
        </div>
        <div class="ui centered grid">
            <input class="ui green basic button" type="submit">
        </div>
    </form>    
</div>

