<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>The Food Blog</title>
		<script
			src="https://code.jquery.com/jquery-3.5.1.min.js"
			integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
			crossorigin="anonymous"
		></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/semantic-ui/2.2.6/semantic.min.js"></script>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css"
			integrity="sha512-8bHTC73gkZ7rZ7vpqUQThUDhqcNFyYi2xgDgPDHc+GXVGHXq+xPjynxIopALmOPqzo9JZj0k6OqqewdGO3EsrQ=="
			crossorigin="anonymous"
		/>
		<link href="/stylesheets/app.css" rel="stylesheet" />
	</head>
	<meta meta name="viewport" content="width=device-width,initial-scale=1.0" />
	<body>
		<div class="ui inverted grey grid">
			<div class="computer only row">
				<div class="column">
					<div class="ui fixed inverted menu" id="menu_comp">
						<div class="header item hide">
							<i class="utensils icon"></i>The Food Blog
						</div>
						<a href="/" class="item">Home</a>
						<% if (currentUser ){ %>
						<a href="/blogs/<%= currentUser._id %>/feed " class="item">Feed</a>
						<% } %>
						<a href="/blogs/new " class="item">New Post</a>
						<form
							action="/blogs"
							method="GET"
							class="ui form"
							style="display: inline"
						>
							<div class="inline field item">
								<input
									type="text"
									name="search"
									placeholder="Blog/User search..."
								/>
								<button class="ui inverted button">Search</button>
							</div>
						</form>
						<div class="right item">
							<% if(!currentUser){ %>
							<a href="/register" class="item"
								>Sign Up <i class="user plus icon" id="modIcon"></i
							></a>
							<a href="/login" class="item"
								>Login <i class="user icon" id="modIcon"></i
							></a>
							<% }else { %> <% if (currentUser && currentUser.isAdmin){ %>
							<div class="ui inverted selection dropdown item head">
								<div class="title">
									<a href="#" class="">
										Notifications (<%= notifications.length +
										commentNotifications.length +
										followerNotifications.length%>)</a
									>
								</div>
								<i class="angle down icon ic"></i>
								<div class="ui menu">
									<div class="item">
										<a class="item" href="/notifications"
											>View past notifications</a
										>
									</div>
									<% notifications.forEach(function(notification) { %>
									<div class="item">
										<a href="/notifications/<%= notification.id %>">
											<%= notification.username %> created a new blog
										</a>
									</div>
									<% }); %> <%
									commentNotifications.forEach(function(notification) { %>
									<div class="item">
										<a href="/commentNotifications/<%= notification.id %>">
											<%= notification.username %> commented on your blog
										</a>
									</div>
									<% }); %> <%
									followerNotifications.forEach(function(notification) { %>
									<div class="item">
										<a href="/followerNotifications/<%= notification.id %>">
											<%= notification.username %> followed you
										</a>
									</div>
									<% }); %>
								</div>
							</div>
							<a href="/users/<%= currentUser._id %>" class="hide"
								>Signed in as -
								<strong><%= currentUser.username %>(admin)</strong></a
							>
							<a href="/logout" class="item">Logout</a>
							<% }else{ %>
							<div class="ui inverted selection dropdown item head">
								<div class="title">
									<a href="#" class="">
										Notifications (<%= notifications.length +
										commentNotifications.length +
										followerNotifications.length%>)</a
									>
								</div>
								<i class="angle down icon ic"></i>
								<div class="ui menu">
									<div class="item">
										<a class="item" href="/notifications"
											>View past notifications</a
										>
									</div>
									<% notifications.forEach(function(notification) { %>
									<div class="item">
										<a href="/notifications/<%= notification.id %>">
											<%= notification.username %> created a new blog
										</a>
									</div>
									<% }); %> <%
									commentNotifications.forEach(function(notification) { %>
									<div class="item">
										<a href="/commentNotifications/<%= notification.id %>">
											<%= notification.username %> commented on your blog
										</a>
									</div>
									<% }); %> <%
									followerNotifications.forEach(function(notification) { %>
									<div class="item">
										<a href="/followerNotifications/<%= notification.id %>">
											<%= notification.username %> followed you
										</a>
									</div>
									<% }); %>
								</div>
							</div>
							<a href="/users/<%= currentUser._id %>" class="hide"
								>Signed in as - <strong><%= currentUser.username %></strong></a
							>
							<a href="/logout" class="item">Logout</a>
							<% } %> <% } %>
						</div>
					</div>
				</div>
			</div>
			<div class="ui fixed tablet mobile only row">
				<div class="column">
					<div class="ui fixed inverted menu" id="mob">
						<a id="mobile_item" class="item"><i class="bars icon"></i></a>
						<div class="header item hide">
							<i class="utensils icon"></i>The Food Blog
						</div>
						<a href="/" class="item">Home</a>
						<% if (currentUser ){ %>
						<a href="/blogs/<%= currentUser._id %>/feed " class="item">Feed</a>
						<% } %>
					</div>
				</div>
			</div>
		</div>

		<div class="ui fixed inverted pushable segment" id="color_apply">
			<div class="ui fixed left inverted sidebar vertical menu" id="side">
				<div class="field" style="margin-top: 47px">
					<form action="/blogs" method="GET" class="ui form">
						<div class="item">
							<input
								type="text"
								name="search"
								placeholder="Blog/User search..."
							/>
							<button
								class="tiny ui inverted button"
								style="margin-top: 10px; margin-left: 80px"
							>
								Search
							</button>
						</div>
					</form>
				</div>

				<div class="field">
					<a href="/blogs/new " class="item">New Post</a>
				</div>
				<div class="item">
					<% if(!currentUser){ %>
					<a href="/register" class="item"
						>Sign Up <i class="user plus icon"></i
					></a>
					<a href="/login" class="item">Login <i class="user icon"></i></a>
					<% }else { %> <% if (currentUser && currentUser.isAdmin){ %>
					<div class="ui inverted styled accordion">
						<div class="title">
							<a href="#" style="color: rgba(255, 255, 255, 0.9)">
								Notifications (<%= notifications.length +
								commentNotifications.length + followerNotifications.length %>)<i
									class="angle down icon"
								></i
							></a>
						</div>
						<div class="ui content menu" style="background-color: #1b1c1d">
							<div class="item">
								<a href="/notifications">View past notifications</a>
							</div>
							<% notifications.forEach(function(notification) { %>
							<div class="item">
								<a href="/notifications/<%= notification.id %>">
									<%= notification.username %> created a new blog
								</a>
							</div>
							<% }); %> <% commentNotifications.forEach(function(notification) {
							%>
							<div class="item">
								<a href="/commentNotifications/<%= notification.id %>">
									<%= notification.username %> commented on your blog
								</a>
							</div>
							<% }); %> <% followerNotifications.forEach(function(notification)
							{ %>
							<div class="item">
								<a href="/followerNotifications/<%= notification.id %>">
									<%= notification.username %> followed you
								</a>
							</div>
							<% }); %>
						</div>
					</div>
					<a href="/users/<%= currentUser._id %>" class="item"
						>Signed in as -
						<strong><%= currentUser.username %>(admin)</strong></a
					>
					<a href="/logout" class="item">Logout</a>
					<% }else{ %>
					<div class="ui styled accordion">
						<div class="title">
							<a href="#" style="color: rgba(255, 255, 255, 0.9)">
								Notifications (<%= notifications.length +
								commentNotifications.length + followerNotifications.length
								%>)</a
							><i
								style="color: rgba(255, 255, 255, 0.9)"
								class="angle down icon"
							></i>
						</div>
						<div class="ui content menu" style="background-color: #1b1c1d">
							<div class="item">
								<a href="/notifications">View past notifications</a>
							</div>
							<% notifications.forEach(function(notification) { %>
							<div class="item">
								<a href="/notifications/<%= notification.id %>">
									<%= notification.username %> created a new blog
								</a>
							</div>
							<% }); %> <% commentNotifications.forEach(function(notification) {
							%>
							<div class="item">
								<a href="/commentNotifications/<%= notification.id %>">
									<%= notification.username %> commented on your blog
								</a>
							</div>
							<% }); %> <% followerNotifications.forEach(function(notification)
							{ %>
							<div class="item">
								<a href="/followerNotifications/<%= notification.id %>">
									<%= notification.username %> followed you
								</a>
							</div>
							<% }); %>
						</div>
					</div>
					<a href="/users/<%= currentUser._id %>" class="item"
						>Signed in as - <strong><%= currentUser.username %></strong></a
					>
					<a href="/logout" class="item">Logout</a>
					<% } %> <% } %>
				</div>
			</div>

			<div class="pusher">
				<div id="content">
					<% if(error.length> 0 || success.length>0){ %>
					<div class="ui main text container segment" id="fill">
						<% if(error && error.length > 0){ %>
						<div class="ui red message" style="margin-top: 100px">
							<p style="text-align: center"><%= error %></p>
						</div>
						<% } %> <% if(success && success.length > 0){ %>
						<div class="ui green message" style="margin-top: 100px">
							<p style="text-align: center"><%= success %></p>
						</div>
						<% } %>
					</div>
					<% } %>
					<script>
						$('.ui.dropdown').dropdown();
						$('.ui.accordion').dropdown();
					</script>
				</div>
			</div>
		</div>
	</body>
</html>
